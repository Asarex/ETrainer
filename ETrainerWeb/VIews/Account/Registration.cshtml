@model ETrainerWeb.Models.ViewModels.RegistrationViewModel

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<div class="registration__container">
  <form class="registration__form" method="post">
    <div class="registration__container-element registration__logname">
      <label class="registration__label" asp-for="Name"></label>
      <input class="registration__input-field default__input-field" asp-for="Name" />
      <span class="login__warning" asp-validation-for="Name"/>
    </div>
    <div class="registration__container-element registration__password">
      <label class="registration__label" asp-for="Password"></label>
      <input class="registration__input-field default__input-field" asp-for="Password" />
      <span class="login__warning" asp-validation-for="Password"/>
    </div>
    <div class="registration__container-element registration__password-confirm">
      <label class="registration__label" asp-for="PasswordConfirm"></label>
      <input class="registration__input-field default__input-field" asp-for="PasswordConfirm" />
      <span class="login__warning" asp-validation-for="PasswordConfirm"/>
    </div>
    <div class="registration__container-element registration__email">
      <label class="registration__label" asp-for="Email"></label>
      <input class="registration__input-field default__input-field" asp-for="Email" />
      <span class="login__warning" asp-validation-for="Email"/>
    </div>
    <button class="registration__btn default__btn" asp-action="Registration">@Localizer["Registration"]</button>
  </form>
</div>
