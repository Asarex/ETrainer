<!DOCTYPE html>

<html>

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width" />
	<title>@ViewData["Title"]</title>
	<link href="~/css/style.css" rel="stylesheet">
</head>

<body>
	<section class="main-screen">
		<header class="header" id="header">
			<div class="header__userinfo">
				<div class="header__userinfo-container">
					<p class="header__userinfo-name">Lorem Ipsum</p>
					<img class="header__userinfo-photo" src="~/img/account-empty-icon.svg" alt="">
				</div>
			</div>
			<div class="header__navbar">
				<div class="header__navbar-container">
					<img src="~/img/logo.svg" alt="" class="header__navbar-logo">
					<menu class="header__navbar-navigation">
						<ul>
							<li><a href="#">Главная</a></li>
							<li><a href="#">Контакты</a></li>
						</ul>
					</menu>
				</div>
			</div>
		</header>
		<div>
			@RenderBody()
		</div>
	</section>

</body>

</html>
