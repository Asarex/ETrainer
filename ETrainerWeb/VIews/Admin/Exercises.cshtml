@model IQueryable<Exercise>

<table>
	<tr>
		<th>
			Name
		</th>
		<th>
			Description
		</th>
		<th></th>
	</tr>
	@foreach (var exercise in Model)
	{
		<tr>
			<td>
				@exercise.Name
			</td>
			<td>
				@exercise.Description
			</td>
			<td>
				<select>
					@foreach (var muscle in exercise.UseMuscles.ToList())
					{
						<option>@muscle.Name</option>
					}
				</select>
			</td>
			<td>
				<a asp-action="EditExercise" asp-route-id="@exercise.ID">Edit</a>
				<a asp-action="DeleteExercise" asp-route-id="@exercise.ID">Delete</a>
			</td>
		</tr>
	}
</table>
<a asp-action="EditExercise" asp-route-id="0">Add new exercise</a>
